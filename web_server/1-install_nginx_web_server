#!/usr/bin/env bash
# This script installs and configures Nginx on an Ubuntu server

# Update package list and install Nginx
sudo apt-get update -y
sudo apt-get install -y nginx

# Create a custom HTML page containing "Holberton School"
echo 'Holberton School for the win!' | sudo tee /var/www/html/index.html

# Ensure Nginx is listening on port 80
sudo sed -i 's/listen 80 default_server;/listen 80;/' /etc/nginx/sites-available/default
sudo sed -i 's/listen \[::\]:80 default_server;/listen \[::\]:80;/' /etc/nginx/sites-available/default

# Reload Nginx configuration to apply changes
sudo nginx -s reload
